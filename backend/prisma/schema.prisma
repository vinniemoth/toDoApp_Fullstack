generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  todos     Todo[]
}

model Todo{
  id        Int       @id @default(autoincrement())
  task      String
  completed Boolean   @default(false)
  userId    Int
  user      User      @relation(fields: [userId], references:[id])
  subTodos  SubTodo[]
}

model SubTodo{
  id        Int       @id @default(autoincrement())
  subtask   String
  completed Boolean   @default(false)
  todoId    Int
  task      Todo      @relation(fields: [todoId], references:[id])
}